@model IEnumerable<ASPMVCLIVESESSION.MODEL.Student>

@{
    ViewBag.Title = "Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Students</h2>

<p>
   <a href="/Student/AddStudentInfo" class="btn btn-success">Add New Student</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Email</td>
            <td>Address</td>
            <td>DOB</td>
            <td>CreatedBy</td>
            <td>CreatedOn</td>
            <td>Action</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Address</td>
            <td>@item.DOB</td>
            <td>@item.CreatedBy</td>
            <td>@item.CreatedOn</td>
            <td>
                @Html.ActionLink("Edit", "UpdateStudentInfoById", new { id = item.Id },new{@class="btn btn-success"}) |
                @Html.ActionLink("Details", "GetStudentInfoById", new { id = item.Id  }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Delete", "DeleteStudentInfoById", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
        }

    </tbody>
</table>
